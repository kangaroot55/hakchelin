<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_frg_suggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="2014년 12월 12일\n맛있는 밥 찾기"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/mealicon" />

    <LinearLayout
        android:id="@+id/ll_frg_suggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_frg_suggest_opti"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="오늘의 학슐랭 추천 밥\n(거리 및 평점 조합)" />

        <Button
            android:id="@+id/btn_frg_suggest_deli"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="멀어도 좋으니\n제일 맛있는 밥이 먹고 싶어요" />

        <Button
            android:id="@+id/btn_frg_suggest_near"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="너무 배고파서\n가까운 곳의 밥이 먹고 싶어요" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_frg_suggest_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="오늘의 학슐랭 추천 밥은!"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ListView
            android:id="@+id/lv_frg_suggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >
        </ListView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="맛있게 드세요!"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

</LinearLayout>